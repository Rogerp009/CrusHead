<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.crushead"
    android:versionCode="2"
    android:versionName="1.4.34" >

    <uses-sdk
        android:maxSdkVersion="21"
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.crushead.SplashScreen"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
            android:windowSoftInputMode="stateHidden" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            
        </activity>
        <activity
            android:windowSoftInputMode="stateHidden"
        	android:logo="@drawable/ic_school_white_48dp"                        
            android:name="com.crushead.Category"
            android:label="@string/title_activity_category" >
        </activity>
        
        <activity
            android:windowSoftInputMode="stateHidden"                       
            android:name="com.crushead.Container"
            android:label="@string/title_activity_container" >
        </activity>
        
        <activity
            android:name="com.crushead.dialog.PauseDialog"
            android:label="@string/title_activity_pause_dialog"
            android:screenOrientation="portrait" >
        </activity>
        
        <activity
            android:windowSoftInputMode="stateHidden"       
            android:icon="@drawable/ic_insert_chart_white_48dp"     
            android:name="com.crushead.Resultados"
            android:label="@string/title_activity_resultados" >
        </activity>
        
        <activity
            android:windowSoftInputMode="stateHidden"         
            android:icon="@drawable/ic_public_white_48dp"   
            android:name="com.crushead.Games"
            android:label="@string/title_activity_games" >
        </activity>
        
        <activity
            android:windowSoftInputMode="stateHidden"            
            android:name="com.crushead.dialog.GamesDialog"
            android:label="@string/title_activity_games_dialog" >
        </activity>
    </application>

</manifest>
